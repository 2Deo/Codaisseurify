<h3>Refactory Records</h3>

<!-- Photos -->
<h1><%= @artist.name %></h1>
<%= image_tag @artist.image_url %>

  <!-- Listing songs according to the current artist -->
  <h2>List of songs<h2>
  <% if @artist.songs.any? %>
  <h3><% @artist.songs.each do |song| %></h3>
  <p><%= song.name %></p>
    <% end %>
  <% else %>
  <p>This Artist has no songs.</p>
    <% end %>

    <hr>

    <%= link_to "Add a New Song", new_song_path %>
